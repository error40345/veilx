# VeilX Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Database
# ===================
DATABASE_URL="postgresql://user:password@localhost:5432/veilx"

# ===================
# Blockchain
# ===================
# Private key for deploying contracts (without 0x prefix)
DEPLOYER_PRIVATE_KEY="your_deployer_private_key_here"

# Private key for relayer wallet (submits user transactions)
RELAYER_PRIVATE_KEY="your_relayer_private_key_here"

# ===================
# Network (Optional - defaults provided)
# ===================
# Sepolia RPC URL (get from Alchemy, Infura, or other providers)
VITE_SEPOLIA_RPC_URL="https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY"

# ===================
# Deployed Contract Addresses
# ===================
# These are set automatically after deployment via scripts
# or you can set them manually if using pre-deployed contracts

# VITE_COLLECTION_FACTORY_ADDRESS="0x..."
# VITE_PRIVACY_POOL_ADDRESS="0x..."
# VITE_CONFIDENTIAL_NFT_ADDRESS="0x..."
# VITE_CONFIDENTIAL_MARKETPLACE_ADDRESS="0x..."
